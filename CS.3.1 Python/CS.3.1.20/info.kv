#:import MDCard kivymd.uix.card.MDCard
#:import MDLabel kivymd.uix.label.MDLabel
#:import MDRectangleFlatButton kivymd.uix.button.MDRectangleFlatButton

<Info>:
    Screen:
        AnchorLayout:
            anchor_x: 'center'
            anchor_y: 'center'
            padding: 50, 50

            MDCard:
                orientation: 'vertical'
                md_bg_color: 1, 1, 0.5, 1

                Widget:
                    size_hint_y: 0.1

                MDLabel:
                    text: root.title
                    underline: True
                    font_size: '40sp'
                    size_hint_y: 0.3
                    halign: 'center'

                Widget:
                    size_hint_y: 0.2

                Image:
                    source: root.source
                    size_hint: 1, None
                    height: '300sp'
                    allow_stretch: True

                BoxLayout:
                    orientation: 'horizontal'

                    # Body Description Text Here

                    Widget:
                        size_hint_x: 0.1

                    MDLabel:
                        canvas.before:
                            Color:
                                rgba: 0, 255, 0, 1
                            Rectangle:
                                size: self.size
                                pos: self.pos
                        text: root.body
                        font_size: '20sp'
                        size_hint_y: 0.7
                        halign: 'center'
                        padding: 50, 0

                    Widget:
                        size_hint_x: 0.1

                Widget:
                    size_hint_y: 0.1

                AnchorLayout:
                    anchor_x: 'center'
                    anchor_y: 'center'
                    size_hint: 1, 0.2

                    MDRectangleFlatButton:
                        text: 'Go Back to Gallery'
                        font_size: '15sp'
                        on_press: root.back()

                Widget:
                    size_hint_y: 0.1





